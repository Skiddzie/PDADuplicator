<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/password_change"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/oldPin"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/oldPinText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="PIN:"
            android:textSize="20.0sp"
            android:layout_weight="1" />
        <EditText
            android:id="@+id/oldPinInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:inputType="textNoSuggestions|text"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reenterPin"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/reenterPinText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20.0sp"
            android:text="REENTER PIN:"
            android:layout_weight="1" />
        <EditText
            android:id="@+id/reenterPinInput"
            android:text=""
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:inputType="number"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/newPin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/newPinText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20.0sp"
            android:text="NEW PIN:"
            android:layout_weight="1" />
        <EditText
            android:id="@+id/newPinInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:inputType="textNoSuggestions|text"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/OKButton"
        android:text="OK"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

</LinearLayout>
